<%= form_for(@project) do |f| %>
	<% if @project.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@project.errors.count, "error") %>
				<%= t "projects._prohibited_entity_saved" %>:
			</h2>
			<ul>
				<% @project.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<p>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :description %><br />
		<%= f.text_field :description %>
		<% if @project.id %> 
			<%= f.submit I18n.t("projects._update_entity") %>
		<% else %>
			<%= f.submit I18n.t("projects._create_entity") %>
		<% end %>
	</p>
<% end %>