<% title(@project.name, I18n.t("projects._entity_pluralized")) %>
<h2><%= @project.name %></h2>

<%= link_to I18n.t("projects._edit_entity"), edit_project_path(@project) %>
<%= link_to I18n.t("projects._delete_entity"),
		project_path(@project),
		method: :delete,
		data: { confirm:
			I18n.t("projects._delete_entity_message_confirm")
		} %>
<%= link_to I18n.t("tickets._new_entity"), new_project_ticket_path(@project) %>
<ul>
	<% @project.tickets.each do |ticket| %>
		<li>
			#<%= ticket.id %> -
			<%= link_to ticket.title, [@project, ticket] %>
		</li>
	<% end %>
</ul>